<%= provide(:title, "Members") %>
<center><h1 class="display-4">Follow them now!</h1></center><br>
    <div class="row">
        <% @users.each do |user| %>
            <% @user = user %>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <%= render 'shared/profile_pic' %>
                            </div>
                            <div class="col-7 mt-4">
                                <div class="card-title"><h5><%= link_to user.name, user_path(@user)%></h5></div>
                                <p class="card-text"><%= @user.email %></p>  
                            </div>       
                        </div>
                        <%= render 'shared/follow_form',class: "btn btn-info btn-block" if logged_in?%>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<%= will_paginate @users %> 
