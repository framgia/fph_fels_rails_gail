<div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card card-signin flex-row my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Update your profile</h5>
                    <%= form_for(@user, url: user_path, html: {class: "form-signin"}) do |f|%>
                        <%= render 'shared/error_messages' %>
                        <div class="form-label-group">
                            <%= f.text_field :name, class: "form-control", autofocus: true, required: true, placeholder: "Name" %>
                            <%= f.label :name %>
                        </div>

                        <div class="form-label-group">
                            <%= f.email_field :email, class: "form-control", required: true ,placeholder: "Email"%>
                            <%= f.label :email %>
                        </div>
                        
                        <hr>

                        <div class="form-label-group">
                            <%= f.password_field :password, class: "form-control", id: "password", required: true, minlength: 6 %>
                            <%= f.label :password %>
                        </div>
                        
                        <div class="form-label-group">
                            <%= f.password_field :password_confirmation, class: "form-control", id: "confirm_password", required: true ,minlength: 6 %>
                            <%= f.label :password_confirmation %>
                            <span id='message'></span>
                        </div>
                        
                        <div class="form-label-group">
                            <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: 'form-control' %>
                        </div>
                        
                        <%= f.submit "Save", class: "btn btn-lg btn-primary btn-block text-uppercase" %>      
                    <% end %>
                </div>
            </div>
        </div>
    </div>