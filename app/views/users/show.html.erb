<%= provide(:title,"Profile") %>
<div class="container py-5">
    <div class="row">
        <div class="col-4">
            <div class="card">
                <div class="card-body text-center">
                    <%= render 'shared/profile_pic' %>
                    <b class="lead"><%= @user.name %></b><br>
                    <%= render 'shared/follow_form'  if logged_in?%>
                    <%= render 'shared/follow_status'%>
                    <hr>
                    <h5><%= @user.words_learned %></h5>
                    <span><b>Words Learned</b></span>
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="card bg-light">
                <div class="card-header text-uppercase"><small><b>Activity Feed</b></small></div>
                <div class="card-body"> 
                    <ul class="list-unstyled">
                        <% @activities.each do |activity| %>
                            <li class="media mb-3">
                                <%= render 'shared/feed_pic' %>
                                <div class="media-body">
                                    <div class="mt-0 mb-1">
                                        <b class="text-secondary">You</b>         
                                        <% if activity.action.is_a? Relationship %>
                                            followed <%= link_to activity.other_user.name,user_path(activity.other_user),class:"badge badge-success" %> 
                                        <% else %>
                                            learned
                                            <%= activity.lesson_score %> 
                                            <%= link_to activity.categ_title, category_lesson_path(activity.action.category,activity.action),class:"badge badge-info" %> 
                                        <% end %> 
                                    </div>
                                    <%= time_ago_in_words(activity.created_at) %> ago.
                                </div>
                            </li>
                        <% end %>
                    </ul>
                </div>
                <div class="card-footer text-muted">
                    <%= will_paginate @activities %> 
                </div>
            </div>
        </div>
    </div>
</div>