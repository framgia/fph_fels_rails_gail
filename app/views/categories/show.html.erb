<%= provide(:title, "Lesson") %>
<br>
<div class="row justify-content-center">
    <div class="col-8">
        <center>
            <h2><%= @category.title %></h2>
            <%= render 'shared/error_answer' %>
        <%= form_for(@lesson, url: lessons_path) do |f| %>
        <% @category.words.each do |word| %>
            <div class="card">
                <div class="card-header text-success"><h4><%= word.content %></h4></div>
                <%= f.hidden_field :category_id, value: @category.id %>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <div class="card-body ">
                    <%= f.fields_for :answers do |p| %> 
                        <ul class="list-unstyled text-center">
                        <div class="funkyradio">
                            <fieldset id="<%= word.id %>" >
                                <% word.choices.each do |choice| %>
                                    <li class="mt-3">
                                        <%= p.hidden_field :word_id , value: word.id %>
                                        <%= p.radio_button :choice_id, choice.id %>
                                        <%= p.label choice.content %>
                                    </li>
                                <% end %>
                            </fieldset>
                        </div>
                        <ul>
                    <% end %>
                </div>
            </div>
        <% end %>
        <%= f.submit "Submit Answers", class: "btn btn-success btn-block btn-lg" %>
        <% end %>
        </center>
    </div>
</div>