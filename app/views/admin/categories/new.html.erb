<%= provide(:title, "Add Category") %>
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card card-signin flex-row my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">New Category<span class="float-right"><%= link_to "Back", admin_categories_path,  class:"btn btn-defualt" %></span></h5>
                    <%= form_for(@category, html: {class: "form-signin"}, url: admin_categories_path) do |f|%>
                        <div class="form-label-group">
                            <%= f.text_field :title, class: "form-control", required: true, placeholder: "Title" %>
                            <%= f.label :title %>
                        </div>
    
                        <div class="form-label-group">
                            <%= f.text_area :description, class: "form-control", required: true , id:"descriptionBox" ,placeholder:"Description", minlength: 50,maxlength: 150 %>
                        </div>
                        
                        <%= f.submit "Add Category", class: "btn btn-lg btn-primary btn-block text-uppercase" %>    
                    <% end %>  
                </div>
            </div>
        </div>
    </div>
</div>