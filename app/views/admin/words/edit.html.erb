<%= provide(:title, "Edit Word") %>
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card card-signin flex-row my-5">
                <div class="card-body">
                    <h5 class="card-title"> Admin | Edit Word <span class="float-right"><%= link_to "Back", admin_category_words_path(@word.category_id),  class:"btn btn-defualt" %></span></h5>
                    <div class="d-flex justify-content-center">
                        <%= form_for(@word, html: {class: "form-signin"},url: admin_category_word_path) do |f|%>
                            <h5>Word</h5>
                            <div class="form-label-group">
                                <%= f.text_field :content, class: "form-control", required: true, placeholder: "Word" %>
                            </div>
                            
                            <div class="form-label-group">
                                <%= f.hidden_field :category_id, value: "#{@word.category_id}" %>
                            </div>
                            
                            <hr>
                            <h5>Choices</h5>
                            <%= f.fields_for :choices do |p| %>
                                <div class="form-label-group">
                                    <%= p.text_field :content, class: "form-control", required: true, placeholder: "Word" %>
                                </div>
                                <div class="form-label-group">
                                    <div class="custom-control custom-checkbox mr-sm-2">
                                        <%= p.check_box :correct, class:"choice-list"%>
                                        <%= p.label :correct %>
                                    </div>
                                </div>
                            <% end %> 
                            <%= f.submit "Save Word", class: "btn  btn-primary btn-block text-uppercase",id: "canSubmit" %>   
                        <% end %> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>