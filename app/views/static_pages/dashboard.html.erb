<%= provide(:title, "Dashboard") %>
<div class="container py-5"> 
    <div class="row">
        <div class="col-4">
            <div class="card">
                <div class="card-body text-center">
                    <%= render 'shared/dashboard_info' %>
                    <%= render 'shared/follow_status' %>
                    <div class="row p-3 mt-2">
                        <%= link_to raw("<h5>#{current_user.words_learned}</h5><span><b>Words Learned</b></span>"), words_path , class: "btn btn-info btn-block" %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="card bg-light">
                <div class="card-header text-uppercase"><small><b>Activity Feed</b></small></div>
                <div class="card-body"> 
                </div>
            </div>
        </div>
    </div>
</div>